<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div class="page">
      <%- include('components/top.inc.ejs') -%>
      <div class="content-wrap">
        <div>
          <form action="?" method="post" enctype="multipart/form-data">
            标题:<input type="text" name="title" /> <br />
            描述:<textarea name="description"></textarea> <br />
            头像:<input type="file" name="f1" /><br />
            <input type="submit" value="添加" />
          </form>
        </div>
        <table border="1" width="100%">
          <thead>
            <tr>
              <th>ID</th>
              <th>标题</th>
              <th>描述</th>
              <th>头像</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i = 0;i < evaluations.length;i++) { %>
            <tr>
              <td><%- evaluations[i].ID %></td>
              <td width="50%"><%- evaluations[i].title %></td>
              <td><%- evaluations[i].description %></td>
              <td>
                <img width="32px" height="32px" src="/upload/<%-  evaluations[i].src  %>" />
              </td>
              <td>
                <a
                  href="?act=mod&id=<%- evaluations[i].ID %>"
                  onclick="return confirm('确定修改吗？')"
                  >修改</a
                >
                <a
                  href="?act=del&id=<%- evaluations[i].ID %>"
                  onclick="return confirm('确定删除吗？')"
                  >删除</a
                >
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <div>
          <% if(typeof mod_data != 'undefined') { %>
          <form action="?" method="post" enctype="multipart/form-data">
            <input type="hidden" name="mod_id" value="<%= mod_data.ID%>" />
            标题:<input
              type="text"
              name="title"
              value="<%= mod_data.title %>"
            />
            <br />
            描述:<textarea name="description"><%= mod_data.description %></textarea>
            <br />
            链接:<input type="file" name="f1" /><br />
            <input type="submit" value="修改" />
          </form>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
